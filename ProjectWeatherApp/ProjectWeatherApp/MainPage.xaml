<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectWeatherApp.MainPage"
             Title="Login">

    <StackLayout Padding="20">
        <Frame BackgroundColor="DodgerBlue" CornerRadius="10">
            <StackLayout Padding="20">
                <Entry x:Name="EmailEntry" Placeholder="Email" PlaceholderColor="White" TextColor="White" />
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" PlaceholderColor="White" TextColor="White" />
                <Button Text="Login" Clicked="OnLoginButtonClicked" />
                <Button Text="Sign Up" Clicked="OnSignupButtonClicked" />
                <Label x:Name="ErrorMessageLabel" TextColor="Red" />
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>