<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectWeatherApp.SignupPage"
             Title="Signup">

    <ContentPage.Content>
        <StackLayout Margin="20">
            <Frame BackgroundColor="DodgerBlue" CornerRadius="10">
                <StackLayout Margin="20">
                    <Entry x:Name="EmailEntry" Placeholder="Email" TextColor="White" PlaceholderColor="White"/>
                    <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" TextColor="White" PlaceholderColor="White" />
                    <Button Text="Sign Up" Clicked="OnSignupButtonClicked" />
                    <Button Text="Back to Login" Clicked="OnLoginButtonClicked" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>