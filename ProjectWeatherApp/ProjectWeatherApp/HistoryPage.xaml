<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectWeatherApp.HistoryPage">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Search History" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10" />

            <!-- ListView to display the search history -->
            <ListView x:Name="historyListView" Margin="0,10,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>